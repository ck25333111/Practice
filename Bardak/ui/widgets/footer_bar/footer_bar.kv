# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/footer_bar/footer_bar.kv
# Нижняя панель с версией приложения и статусом
# ────────────────────────────────────────────────────────────────

<FooterBar>:
    size_hint_y: 0.1
    padding: dp(10), dp(5)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: app.colors("#000000", 0.9)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.version
        color: app.colors("#ffffff", 1)
        font_size: '14sp'
        halign: 'right'
        valign: 'middle'
        text_size: self.size
