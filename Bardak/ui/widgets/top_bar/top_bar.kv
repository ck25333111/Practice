# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/top_bar/top_bar.kv
# Верхняя панель приложения с названием и кнопкой профиля
# ────────────────────────────────────────────────────────────────

<TopBar>:
    size_hint_y: 0.1
    padding: dp(10), dp(5)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: app.hex("#000000", 0.9)
        Rectangle:
            pos: self.pos
            size: self.size
#    canvas.before:
#        Color:
#           rgba: app.hex("#ffffff", 1)
#        Line:
 #           rectangle: self.x, self.y, self.width, self.height
  #          width: 1

# ──────────────────Заголовок────────────────────────────────
    Label:
        text: "держи Bardak под контролем"
        bold: True
        color: app.hex("#ffffff", 0.9)
        font_size: '20sp'
        size_hint_x: 0.5
        valign: 'middle'
        halign: 'center'
        text_size: self.size


# ───────────────────Кнопка "Профиль"───────────────────────────────
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1
        size_hint_x: 0.1

        Widget:  # Пустышка сверху

        Button:
            text: "Профиль"
            size_hint_y: None
            height: dp(30)
            font_size: '18sp'
            background_color: app.hex("#000000", 0)
            color: app.hex("#ffffff", 1)
            background_normal: ''
            background_down: ''
            canvas.before:
                Color:
                    rgba: app.hex("#fffb00", 1.2)  # Желтая рамка
                Line:
                    rounded_rectangle: (self.x, self.y, self.width, self.height, dp(5))
                    width: 1
            on_release:
                app.root.ids.content_area.switch_to("profile_screen")

        Widget:  # Пустышка сверху