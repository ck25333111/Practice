# Bardak/ui/widgets/top_bar/top_bar.kv
# Верхняя панель приложения с названием и кнопкой профиля
# ────────────────────────────────────────────────────────────────

<TopBar>:
    size_hint_y: 0.1
    padding: dp(10), dp(5)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: app.hex("#000000", 0.9)
        Rectangle:
            pos: self.pos
            size: self.size
#    canvas.before:
#        Color:
#           rgba: app.hex("#ffffff", 1)
#        Line:
 #           rectangle: self.x, self.y, self.width, self.height
  #          width: 1

# ──────────────────Заголовок────────────────────────────────
    Label:
        text: "держи Bardak под контролем"
        bold: True
        color: app.hex("#ffffff", 0.9)
        font_size: '20sp'
        size_hint_x: 0.5
        valign: 'middle'
        halign: 'center'
        text_size: self.size


# ───────────────────Кнопка "Профиль"───────────────────────────────
    Button:
        text: "Профиль"
        size_hint_x: 0.1
        on_release:
            print("Профиль наебнулся, надо потом сделать нормальную функцию")
