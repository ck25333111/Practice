# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/content_area/content_area.kv
# Центральная область приложения со сменяемыми экранами
# ────────────────────────────────────────────────────────────────

<ContentArea>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.7, 1.0, 0.6, 0.2
            Rectangle:
                pos: self.pos
                size: self.size

        LeftMenu:  #  виджет с кнопками
            id: left_menu
            size_hint_x: 0.3
            canvas.before:
                Color:
                    rgba: 0.3, 1.0, 0.9, 0.5
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1
            canvas.before:
                Color:
                    rgba: 0.6, 0.6, 0.2, 0.1  # ярко-красная полупрозрачная заливка, чтоб видеть бокс
                Rectangle:
                    pos: self.pos
                    size: self.size
