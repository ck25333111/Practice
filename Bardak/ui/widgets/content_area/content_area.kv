# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/content_area/content_area.kv
# Центральная область приложения со сменяемыми экранами
# ────────────────────────────────────────────────────────────────

<ContentArea>:
    BoxLayout:
        orientation: 'horizontal'

# ────────────────────────────────────────────────────────────────
        BoxLayout:  # ← Внешний контейнер с рамкой
            orientation: 'vertical'
            size_hint_x: 0.3

            AnchorLayout:  # ← Контейнер, прижимающий контент вверх
                anchor_y: 'top'

                LeftMenu:  # список кнопок
                    id: left_menu
                    size_hint_y: None
                    height: self.minimum_height

# ────────────────────────────────────────────────────────────────
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7

            ScreenManager:
                id: screen_manager

                HomeScreen:
                    name: "home_screen"

                AddItemScreen:
                    name: "add_item_screen"

                SearchScreen:
                    name: "search_screen"

                StoragesScreen:
                    name: "storages_screen"

                SettingsScreen:
                    name: "settings_screen"

                ProfileScreen:
                    name: "profile_screen"

