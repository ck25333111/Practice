# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/content_area/content_area.kv
# Центральная область приложения со сменяемыми экранами
# ────────────────────────────────────────────────────────────────

<ContentArea>:
    BoxLayout:
        orientation: 'horizontal'

# ────────────────────────────────────────────────────────────────
        BoxLayout:  # ← Внешний контейнер с рамкой
            orientation: 'vertical'
            size_hint_x: 0.3

            canvas.before:
                Color:
                    rgba: app.hex("#000000", 0.5)  # фон
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: app.hex("#ffffff", 1)  # рамка
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 0.1

            AnchorLayout:  # ← Контейнер, прижимающий контент вверх
                anchor_y: 'top'

                LeftMenu:  # ← Вот он, твой славный список кнопочек
                    id: left_menu
                    size_hint_y: None
                    height: self.minimum_height

# ────────────────────────────────────────────────────────────────
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7

            ScreenManager:
                id: screen_manager

                HomeScreen:
                    name: "home_screen"

                SearchScreen:
                    name: "search_screen"

