# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/content_area/content_area/screens/storages_cells_config_screen.kv
# Экран конфигурации ячеек внутри каждого ящика
# ────────────────────────────────────────────────────────────────

<StoragesCellsConfigScreen>:
    ScreenContainer:
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding: dp(20)

            ScrollView:
                size_hint_y: 1  # ← растягивается на всё доступное пространство
                do_scroll_x: False

                BoxLayout:
                    id: sections_inputs_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)


            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None

                Button:
                    text: "Назад"
                    size_hint_x: 0.4
                    size_hint_y: None
                    height: dp(50)
                    background_color: app.colors("BLACK", 0)
                    color: app.colors("YELLOW", 1)
                    canvas.before:
                        Color:
                            rgba: app.colors("YELLOW", 1.2)
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, dp(15))
                    on_release:
                        app.root.ids.content_area.switch_to("storages_rows_config_screen")

                Widget:
                    size_hint_x: 0.2

                Button:
                    text: "Продолжить"
                    size_hint_x: 0.4
                    size_hint_y: None
                    height: dp(50)
                    background_color: app.colors("BLACK", 0)
                    color: app.colors("YELLOW", 1)
                    canvas.before:
                        Color:
                            rgba: app.colors("YELLOW", 1.2)
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, dp(15))
                    on_release:
                        root.on_continue()
