# ────────────────────────────────────────────────────────────────
# Bardak/ui/widgets/content_area/content_area/screens/storages_screen.kv
# Шаблон первого экрана "Мои Хранилища" с полями и кнопкой "Рассчитатьт ячейки"
# ────────────────────────────────────────────────────────────────

<StoragesScreen>:
    ScreenContainer:
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)

            SimpleLabelInputs:
                id: storage_place_name
                label_text: "Введите место хранения"
                hint_text: "Например: Зал, Балкон"

            SimpleLabelInputs:
                id: box_name
                label_text: "Введите название бокса"
                hint_text: "Например: Шкаф, Камод, Стеллаж"

            SimpleLabelInputs:
                id: rows_section_count
                label_text: "Горизонтальных рядов"
                hint_text: "Например: 3"

            Widget:
            Button:
                text: "Далее"                      # Текст на кнопке
                size_hint_y: None                              # Фиксированная высота
                height: dp(50)                                 # Конкретная высота кнопки
                background_color: app.colors("BLACK", 0)    # Цвет фона — желтый с усилением
                color: app.colors("GREEN", 1)                  # Цвет текста — чёрный
                bold: True
                                             # Жирный текст
                canvas.before:
                    Color:
                        rgba: app.colors("YELLOW", 1.2)  # Желтая рамка
                    Line:
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(15))

                on_release: root.build_cells_fields()             # При нажатии вызвать метод в Python классе экрана

