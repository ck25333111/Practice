<StoragesScreen>:
    ScreenContainer:
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)

            SimpleLabelInputs:
                label_text: "Введите место хранения"
                hint_text: "Например: Шкаф на балконе"

            SimpleLabelInputs:
                label_text: "Введите название бокса"
                hint_text: "Например: Коробка с инструментами"

            SimpleLabelInputs:
                label_text: "Количество отсеков"
                hint_text: "Например: 3"

            SimpleLabelInputs:
                label_text: "Расположение секций"
                hint_text: "Горизонтально или вертикально"
