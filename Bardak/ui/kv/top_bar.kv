<Image>:
    allow_stretch: True  # чтобы картинка масштабировалась под размер
    keep_ratio: True     # сохранить пропорции

<TopBar>:
    size_hint_y: None
    height: dp(50)
    padding: dp(10), dp(5)
    spacing: dp(10)
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 168/255, 255/255, 180/255, 0.59
        Rectangle:
            pos: self.pos
            size: self.size


    Image:
        source: "ui/assets/logo.png"  # путь до картинки относительно запускаемого файла!
        size_hint_x: 0.1
        allow_stretch: True
        keep_ratio: True


    Label:
        text: "BardaK"
        font_size: '16sp'
        color: 1, 1, 1, 0.8
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        shorten: False
        canvas.after:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                rectangle: (self.x, self.y, self.width, self.height)
                width: 1.2

    Button:
        text: "Профиль"
        size_hint_x: 0.2
        on_release: root.on_profile_pressed()
