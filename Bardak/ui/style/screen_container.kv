# ────────────────────────────────────────────────────────────────
# Файл: ui/style/screens_container.kv
# Назначение: Стиль и визуальное оформление контейнера экранов
# ────────────────────────────────────────────────────────────────

<ScreenContainer>:
    size_hint: 1, 1                                  # Занимает всю доступную площадь
    padding: 10                                      # Внутренние отступы 10px со всех сторон

    canvas.before:
        Color:
            rgba: app.colors("YELLOW", 1.2)  # Желтая рамка
        Line:
            rounded_rectangle: (self.x + 10, self.y + 10, self.width - 30, self.height - 20, dp(30))
            width: 1


